---
interface EducationItem {
  degree: string;
  institution: string;
  period: string;
  grade: string;
  details?: string[];
}

interface Props {
  education: EducationItem[];
}

const { education } = Astro.props;
---

<section class="mb-16">
  <h2 class="text-2xl font-semibold mb-6">Education</h2>
  <div class="space-y-6">
    {education.map((edu) => (
      <div>
        <h3 class="text-xl font-medium text-gray-800">{edu.degree}</h3>
        <p class="text-gray-600 mb-1">{edu.institution}</p>
        <p class="text-gray-600 mb-2">{edu.period} â€¢ {edu.grade}</p>
        {edu.details && (
          <ul class="list-disc list-inside text-gray-700">
            {edu.details.map((detail) => (
              <li>{detail}</li>
            ))}
          </ul>
        )}
      </div>
    ))}
  </div>
</section>