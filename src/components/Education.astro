---
interface EducationItem {
  degree: string;
  institution: string;
  period: string;
  grade: string;
  details?: string[];
}

interface Props {
  education: EducationItem[];
}

const { education } = Astro.props;
---

<section class="mb-20 animate-slide-up">
  <h2 class="text-3xl font-semibold mb-8 text-gray-800">Education</h2>
  <div class="space-y-8">
    {education.map((edu) => (
      <div class="hover:bg-white hover:shadow-lg rounded-xl p-6 transition-all duration-300 -mx-6">
        <h3 class="text-2xl font-medium text-gray-800">{edu.degree}</h3>
        <p class="text-gray-600 mb-1">{edu.institution}</p>
        <p class="text-gray-600 mb-3">{edu.period} • {edu.grade}</p>
        {edu.details && (
          <ul class="list-none text-gray-700">
            {edu.details.map((detail) => (
              <li class="flex items-start space-x-2">
                <span class="text-blue-500 mt-1.5">•</span>
                <span>{detail}</span>
              </li>
            ))}
          </ul>
        )}
      </div>
    ))}
  </div>
</section>