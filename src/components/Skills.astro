---
interface Props {
  categories: {
    [key: string]: string[];
  };
}

const { categories } = Astro.props;
---

<section class="mb-16">
  <h2 class="text-2xl font-semibold mb-6">Technical Skills</h2>
  <div class="space-y-6">
    {Object.entries(categories).map(([category, skills]) => (
      <div>
        <h3 class="text-lg font-medium mb-3 capitalize text-gray-700">{category}:</h3>
        <div class="flex flex-wrap gap-2">
          {skills.map((skill) => (
            <span class="px-3 py-1 bg-gray-50 rounded text-gray-700">
              {skill}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>