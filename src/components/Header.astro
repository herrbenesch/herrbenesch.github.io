---
interface Props {
  name: string;
  title: string;
  location: string;
  email: string;
}

const { name, title, location, email } = Astro.props;
---

<div class="text-center mb-20 animate-fade-in">
  <h1 class="text-6xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">
    {name}
  </h1>
  <p class="text-2xl text-gray-700 mb-4 font-medium">{title}</p>
  <div class="text-gray-600 space-y-1">
    <p>{location}</p>
    <a 
      href={`mailto:${email}`} 
      class="inline-block text-blue-600 hover:text-blue-700 transition-colors duration-200 hover:-translate-y-0.5 transform"
    >
      {email}
    </a>
  </div>
</div>