---
interface ExperienceItem {
  title: string;
  company: string;
  location: string;
  period: string;
  achievements: string[];
}

interface Props {
  experiences: ExperienceItem[];
}

const { experiences } = Astro.props;
---

<section class="mb-16">
  <h2 class="text-2xl font-semibold mb-6">Experience</h2>
  <div class="space-y-8">
    {experiences.map((exp) => (
      <div class="group">
        <h3 class="text-xl font-medium text-gray-800">
          {exp.title}
        </h3>
        <p class="text-gray-600 mb-3">{exp.company} • {exp.location} • {exp.period}</p>
        <ul class="list-disc list-inside text-gray-700 space-y-1">
          {exp.achievements.map((achievement) => (
            <li class="leading-relaxed">{achievement}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>