---
interface ExperienceItem {
  title: string;
  company: string;
  location: string;
  period: string;
  achievements: string[];
}

interface Props {
  experiences: ExperienceItem[];
}

const { experiences } = Astro.props;
---

<section class="mb-20 animate-slide-up">
  <h2 class="text-3xl font-semibold mb-8 text-gray-800">Experience</h2>
  <div class="space-y-12">
    {experiences.map((exp) => (
      <div class="group hover:bg-white hover:shadow-lg rounded-xl p-6 transition-all duration-300 -mx-6">
        <h3 class="text-2xl font-medium text-gray-800 group-hover:text-blue-600 transition-colors duration-300">
          {exp.title}
        </h3>
        <p class="text-gray-600 mb-4">{exp.company} • {exp.location} • {exp.period}</p>
        <ul class="list-none text-gray-700 space-y-2">
          {exp.achievements.map((achievement) => (
            <li class="flex items-start space-x-2">
              <span class="text-blue-500 mt-1.5">•</span>
              <span class="leading-relaxed">{achievement}</span>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>