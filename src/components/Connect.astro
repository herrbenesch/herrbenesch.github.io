---
interface SocialLink {
  platform: string;
  url: string;
}

interface Props {
  links: SocialLink[];
}

const { links } = Astro.props;
---

<section class="mb-16">
  <h2 class="text-2xl font-semibold mb-6">Connect</h2>
  <div class="flex flex-wrap gap-4">
    {links.map((link) => (
      <a 
        href={link.url} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="px-4 py-2 bg-gray-50 rounded text-gray-700 hover:bg-gray-100 transition-colors"
      >
        {link.platform}
      </a>
    ))}
  </div>
</section>